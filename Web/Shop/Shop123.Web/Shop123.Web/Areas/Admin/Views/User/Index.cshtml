@model IEnumerable<Shop123.Entities.Entities.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Users <small>Danh sách users</small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Default Example <small>Users</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link">
                                <i class="fa fa-close"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tài khoản</th>
                            <th>Họ và tên</th>
                            <th>Địa chỉ</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                        </thead>

                        <tbody>
                        @foreach (var t in Model)
                        {
                            <tr id="@t.ID">
                                <td></td>
                                <td>@t.Username</td>
                                <td>@t.Name</td>
                                <td>@t.Address</td>
                                <td>@t.Phone</td>
                                <td>@t.Email</td>
                                @if (t.Status == false)
                                {
                                    <td><span class="badge bg-red">Khóa</span></td>
                                }
                                else
                                {
                                    <td><span class="badge bg-green">Hoạt động</span></td>
                                }
                                <td>
                                    <label class="col-lg-4 col-md-12 text-align-center">
                                        <a href="#"><i class="fa fa-file"></i></a>
                                    </label>
                                    <label class="col-lg-4 col-md-12 text-align-center">
                                        <a href="#"><i class="fa fa-edit"></i></a>
                                    </label>
                                    <label class="col-lg-4 col-md-12 text-align-center">
                                        <a href="#"><i class="fa fa-remove"></i></a>
                                    </label>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>