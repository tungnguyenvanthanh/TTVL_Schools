
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

@model Shop_TTVL.Entities.Model.ProductModel

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Users <small>Thông tin tài khoản</small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Default Example <small>Users</small>
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link">
                                <i class="fa fa-close"></i>
                            </a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form @Url.Action("Detail", "ProductsClient") method="post" id="demo-form2" class="form-horizontal form-label-left">
                        @Html.AntiForgeryToken()
                        <input name="RowID" value="@Model.Id" type="hidden" />
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.ValidationSummary(true, null, new { @class = $"alert {Model.Alert}" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-red" })
                                <input type="text" name="Name" class="form-control col-md-7 col-xs-12" value="@Model.Name">
                            </div>
                        </div> <!--Name-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Price
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="Price" class="form-control col-md-7 col-xs-12" value="@Model.Price">
                            </div>
                        </div> <!--Price-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Quantity
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="Quantity" class="form-control col-md-7 col-xs-12" value="@Model.Quantity">
                            </div>
                        </div> <!--Quantity-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                View
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" name="View" readonly="readonly" class="form-control col-md-7 col-xs-12" value="@Model.View">
                            </div>
                        </div> <!--View-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                Image
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="submit" name="submit" value="Change image" class="btn btn-info" />
                                <div class="photo-img">
                                    <input name="Image" value="@Model.Image" type="hidden" />
                                    <img src="~/Assets/Client/upload-img/@Model.Image"/>
                                </div>
                            </div>
                        </div> <!--Image-->
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <a href="@Url.Action("Index","ProductsClient")" class="btn btn-primary">Back</a>
                                <button type="submit" name="submit" value="Save" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





