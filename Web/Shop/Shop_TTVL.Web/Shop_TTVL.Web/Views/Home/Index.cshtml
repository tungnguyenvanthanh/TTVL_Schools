                    @{
                        var active = 0;
                    }
                    @foreach (var t in Model.ProductTypes)
                    {
                        if (active == 0)
                        {
                            <li role="presentation" class="active">
                                <a href="#@t.Id" id="mobile-tab" role="tab" data-toggle="tab" aria-controls="mobile">@t.Name</a>
                            </li>
                            active++;
                        }
