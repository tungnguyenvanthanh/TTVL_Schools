@model List<Models.Framework.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Category</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <div class="text-left col-md-6">DataTables Advanced Tables</div>
                <div class="text-right col-md-6">
                    @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-default" })
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Created date</th>
                        <th>Order</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@(item.CreatrDate.HasValue ? item.CreatrDate.Value.ToString("yyyy/MM/dd") : "")</td>
                            <td class="center">@item.Order.GetValueOrDefault(0)</td>
                            <td class="center">@(item.Status.GetValueOrDefault(false) ? "Active" : "Blocked")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

